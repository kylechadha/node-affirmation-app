<div class="index">

  <div class="index__main flex">

    <div class="index__main__teaser">

      <img src="images/mobile-phone-outline.jpg">
      
    </div>


    <div class="index__main__signup">

      <form action="/" method="post" class="well">

        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <h4 class="text-center">Sign up for Melon and get affirmations to brighten your day!</h4><br>
        <div class="form-group">
          <label>Phone number:</label>
          <input type="text" class="form-control" placeholder="(555) 872-2839" name="phone">
        </div>
        <div class="form-group">
          <label>First Name:</label>
          <input type="text" class="form-control" placeholder="Arya" name="firstname">
        </div>
        <div class="form-group">
          <label>Gender:</label><br>
          <input type="radio" name="gender" value="Male"> Male <br>
          <input type="radio" name="gender" value="Female"> Female
        </div>
        <div class="form-group">
          <label>Password:</label>
          <input type="password" class="form-control" placeholder="Password" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Send me affirmations!</button>
      </form>
      
    </div>

  </div>

</div>
