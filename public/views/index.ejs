<!-- views/index.ejs -->
<!doctype html>
<html>

<head>
	<title>Melon App</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
  <link rel="stylesheet" type="text/css" href="stylesheets/compiled-master.css">
</head>

<body>
<div class="container">

<div class="row">
  <div class="jumbotron text-center">
    <h1><i class="fa fa-adjust"></i> Melon</h1>
    <h3>Welcome to Melon App.</h3>
    <p>It's time to start feeling good. Real good :].</p>
  </div>
</div>

<div class="row">

  <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
  <% } %>

  <div class="col-md-6"></div>
  <div class="col-md-6">
    <form action="/" method="post" class="well">
      <h4 class="text-center">Sign up for Melon and get affirmations to brighten your day!</h4><br>
      <div class="form-group">
        <label>Phone number:</label>
        <input type="text" class="form-control" placeholder="(555) 872-2839" name="phone">
      </div>
      <div class="form-group">
        <label>First Name:</label>
        <input type="text" class="form-control" placeholder="Arya" name="firstname">
      </div>
      <div class="form-group">
        <label>Email:</label>
        <input type="email" class="form-control" placeholder="arya@gmail.com" name="email">
      </div>
      <div class="form-group">
        <label>Alert Type:</label>
        <label class="checkbox">
          <input type="checkbox" name="alerttext"> Text Message
        </label>
        <label class="checkbox">
          <input type="checkbox" name="alertemail"> Email
        </label>
      </div>
      <div class="form-group">
        
      </div>
      <div class="form-group">
        
      </div>
      <div class="form-group">
        
      </div>
      <div class="form-group">
        <label>Password:</label>
        <input type="password" class="form-control" placeholder="Password" name="password">
      </div>
      <button type="submit" class="btn btn-primary">Send me affirmations!</button>
    </form>

  </div>
</div>


</div>
<script src="//localhost:35729/livereload.js"></script>
</body>

</html>